<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.journalapp.controller.WriteEntryController"
           styleClass="root"
           stylesheets="@../styles/styles.css">

    <stylesheets>
        <URL value="@../styles/styles.css"/>
    </stylesheets>

    <BorderPane styleClass="card"
                prefWidth="800.0"
                prefHeight="600.0">

        <top>
            <HBox alignment="CENTER_LEFT"
                  prefHeight="60.0"
                  spacing="10.0"
                  styleClass="header-box"
                  BorderPane.alignment="CENTER">
                <children>
                    <Button fx:id="backButton"
                            mnemonicParsing="false"
                            onAction="#onCancel"
                            text="← Back"/>
                    <Label fx:id="headerLabel"
                           styleClass="header-label"
                           text="Create a New Entry"/>
                </children>
                <padding>
                    <Insets left="20" right="20"/>
                </padding>
            </HBox>
        </top>

        <center>
            <VBox spacing="15.0" BorderPane.alignment="CENTER">
                <children>
                    <Label text="Title:"/>
                    <TextField fx:id="titleField" promptText="Give your entry a title..."/>
                    <Label text="Today's Thoughts:"/>
                    <TextArea fx:id="contentArea"
                              prefHeight="200.0"
                              wrapText="true"
                              VBox.vgrow="ALWAYS"
                              promptText="Write everything here..."/>
                </children>
                <padding>
                    <Insets top="20" right="20" bottom="20" left="20"/>
                </padding>
            </VBox>
        </center>

        <bottom>
            <HBox alignment="CENTER_RIGHT"
                  prefHeight="60.0"
                  BorderPane.alignment="CENTER">
                <children>
                    <Button fx:id="saveButton"
                            mnemonicParsing="false"
                            onAction="#onDashboard"
                            styleClass="primary-button"
                            text="Save Entry"/>
                </children>
                <padding>
                    <Insets right="20"/>
                </padding>
            </HBox>
        </bottom>

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
    </BorderPane>
</StackPane>
