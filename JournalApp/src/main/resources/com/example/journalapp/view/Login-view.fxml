<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<?import java.net.URL?>
<StackPane xmlns="http://javafx.com/javafx/21"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.journalapp.controller.LoginController"
           styleClass="root"
           stylesheets="@../styles/styles.css"
           prefWidth="800.0" prefHeight="600.0"
           minWidth="800.0" minHeight="600.0">

   <stylesheets>
      <URL value="@../styles/styles.css" />
   </stylesheets>

   <VBox spacing="30.0"
         styleClass="card"
         maxWidth="360.0"
         alignment="CENTER">
      <children>
         <Label styleClass="title-label" text="Welcome Back!" />
         <Label text="Log in to continue your journey." />
         <VBox alignment="CENTER_LEFT" maxWidth="300.0" spacing="10.0">
            <children>
               <Label text="Username" />
               <TextField fx:id="usernameField" promptText="Enter your username" />
               <Label text="Password" />
               <PasswordField fx:id="passwordField" promptText="Enter your password" />
            </children>
         </VBox>
         <Button fx:id="loginButton"
                 mnemonicParsing="false"
                 onAction="#onLogin"
                 styleClass="primary-button"
                 text="Log In" />
         <Hyperlink onAction="#onGoSignUp"
                    text="Don't have an account? Sign Up" />
      </children>
      <padding>
         <Insets top="20" right="20" bottom="20" left="20" />
      </padding>
   </VBox>
</StackPane>
