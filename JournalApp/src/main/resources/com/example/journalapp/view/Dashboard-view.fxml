<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.StackPane?>

<?import javafx.scene.layout.VBox?>
<?import java.net.URL?>
<StackPane xmlns="http://javafx.com/javafx/23.0.1"
           xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="com.example.journalapp.controller.DashboardController"
           styleClass="root"
           stylesheets="@../styles/styles.css">

    <stylesheets>
        <URL value="@../styles/styles.css"/>
    </stylesheets>

    <BorderPane styleClass="card"
                prefWidth="800.0"
                prefHeight="600.0">
        <top>
            <HBox alignment="CENTER_LEFT"
                  prefHeight="60.0"
                  spacing="10.0"
                  styleClass="header-box"
                  BorderPane.alignment="CENTER">
                <children>
                    <Label styleClass="header-label" text="My Journal"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button fx:id="logoutButton"
                            mnemonicParsing="false"
                            onAction="#onLogout"
                            styleClass="logout-button"
                            text="Logout"/>
                </children>
                <padding>
                    <Insets left="20" right="20"/>
                </padding>
            </HBox>
        </top>

        <center>
            <VBox alignment="CENTER" spacing="30.0" BorderPane.alignment="CENTER">
                <children>
                    <Label styleClass="title-label" text="What's on your mind today?"/>
                    <Button fx:id="createEntryButton"
                            mnemonicParsing="false"
                            onAction="#onWriteEntry"
                            prefHeight="60.0"
                            prefWidth="250.0"
                            styleClass="primary-button"
                            text="Create New Journal Entry"/>
                    <Button fx:id="pastEntriesButton"
                            mnemonicParsing="false"
                            onAction="#onPastEntries"
                            prefHeight="60.0"
                            prefWidth="250.0"
                            text="Search Past Entries"/>
                </children>
            </VBox>
        </center>

        <right>
            <VBox alignment="TOP_CENTER"
                  prefWidth="213.0"
                  spacing="10.0"
                  styleClass="card"
                  BorderPane.alignment="CENTER">
                <children>
                    <Label text="Journal Streak"/>
                    <Label fx:id="streakLabel"
                           styleClass="streak-label"
                           text="ðŸ”¥ 15"/>
                    <Label text="Days"/>
                </children>
                <padding>
                    <Insets top="20" right="20" bottom="20" left="10"/>
                </padding>
            </VBox>
        </right>

        <padding>
            <Insets top="20" right="20" bottom="20" left="20"/>
        </padding>
    </BorderPane>
</StackPane>
